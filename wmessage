# display message on mode-line
stty size >/dev/null 2>&1

MSG=$*

printf "\e7" # save

printf "\e[$((LINES-2));0H" # gotorc

printf "\e[42;30m\e[K";
printf "./w "

printf "\e[0m" # restore color

printf "\e[$((LINES-1));0H" # gotorc

#printf "\e[32m" # green
printf "\e[37m" # green

printf "${MSG:0:$((COLUMNS-1))}" # print message
#TODO: limit length

printf "\e[K" # clear end of line

printf "\e[0m" # restore color

printf "\e8" # restore