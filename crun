rm core 2>/dev/null
rm a.out 2>/dev/null

FIL=$1
shift

[[ -f $FIL ]] && FIL=$FIL
[[ -f $FIL.c ]] && FIL=$FIL.c
[[ -f Play/$FIL ]] && FIL=Play/$FIL
[[ -f Play/$FIL.c ]] && FIL=Play/$FIL.c

printf "# ./crun $FIL\n"
[[ ! -n $FIL ]] && printf "# ./wcode $FIL ===> `./wcode $FIL` LOCs\n\n"

[[ -f $FIL ]] && cc -DMAIN -Wno-string-compare -g $FIL && ./a.out $@
stty sane



