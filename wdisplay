# Display an preformatted ANSI-file
# starting at opt LINE (1) showing 
# LINES (99999).
#
# Usage:
#  ./wdisplay [ansi.f [line [lines]]]

HLINE=${4:--1}
TOP=${2:-1}
LINES=${3:-$$((LINES-2))}
ANSI=${1:-.stdout}

echo "`date --iso=s` #=WDISPLAY $HLINE $TOP $LINES $ANSI" >> .wlog

# sets LINES/COLUMNS
stty size >/dev/null

echo "./wlinks $ANSI > .wlinks"

./wlinks $ANSI > .wlinks

(cat $ANSI | perl -0777 -pe 's/(\n#.*?)+\n//g') \
| tail +$TOP | head -$LINES

